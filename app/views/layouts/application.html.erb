<!DOCTYPE html>
<html>
  <head>
    <title>Neoplants</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <% if logged_in? %>
       <!-- need to make this not appear on /plants -->
      <!-- <%= link_to "See All Plants", plants_path %> -->
      <%= button_to "See All Plants", plants_path, :method =>"get" %>
      <!--  need to make this not appear on /plants/new-->
      <!-- <%= link_to "Add Plant to Your Collection", new_plant_path %> -->
      <%= button_to "Add Plant to Your Collection", new_plant_path, :method =>"get" %>

    <% end %>
    <%= yield %>
    <div class="logoutPlace">
    <% if logged_in? %>
      <%= button_to "Logout", logout_path, method: :delete %>
      <% else %>
    <% end %>
    </div>
    <!-- <%= link_to "Back to Homepage", root_path %> -->
  </body>
</html>
