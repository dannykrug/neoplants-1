<link rel="stylesheet" href="new_user.css">
<link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
<%= link_to "Back to Homepage", root_path %>

<div class="titleCenter">
<h1>SIGN UP FOR NEOPLANTS</h1></div>

<div class="gutsCenter">
<%= form_for @user do |f| %>
  <%= f.label :first_name%>
  <%= f.text_field :first_name %><br>
  <%= f.label :last_name%>
  <%= f.text_field :last_name %><br>
  <%= f.label :email%>
  <%= f.text_field :email %><br>
  <%= f.label :username%>
  <%= f.text_field :username %><br>
  <%= f.label :password%>
  <%= f.password_field :password %><br>
  <%= f.label :password_confirmation, "Re-enter Password"%>
  <%= f.password_field :password_confirmation %><br>
  <%= f.submit "Submit" %>
<% end %>
</div>

<div class="plantsCorner">
<img src="https://thumbs.gfycat.com/TastyFantasticAmericanredsquirrel-small.gif" alt="Tiny Dancing Pixel Plants...">
</div>
