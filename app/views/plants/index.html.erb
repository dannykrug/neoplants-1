<head>
  <style>
    a { color: #FFFFF0; } /* CSS link color */
  </style>
  <link href="https://fonts.googleapis.com/css?family=Press+Start+2P" rel="stylesheet">
</head>

<body>
<h1>Pick a Plant to Interact With!</h1>

<ul>
  <% @plants.each do |plant| %>
    <div class="plant_container">
      <h3><%=link_to plant.name, plant %></h3>
      <%= link_to image_tag(plant.img_url), plant%>
      <%= button_to "Kill #{plant.name}", plant, method: :delete, data: {confirm: "Are you sure you want to kill #{plant.name}?"} %>
  </div>

  <% end %>

</body>
